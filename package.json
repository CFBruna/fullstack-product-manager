{
  "name": "fullstack-product-manager",
  "version": "1.0.0",
  "description": "Monorepo Root",
  "private": true,
  "scripts": {
    "postinstall": "npm run install:all",
    "install:all": "npm install --prefix backend && npm install --prefix frontend",
    "dev": "concurrently \"npm run dev --prefix backend\" \"npm run dev --prefix frontend\"",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "npm run lint --prefix backend",
    "lint:frontend": "npm run lint --prefix frontend",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "npm test --prefix backend",
    "test:frontend": "npm test --prefix frontend -- --run",
    "test:coverage": "npm run test:backend -- --coverage && npm run test:frontend -- --coverage --run",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  },
  "lint-staged": {
    "backend/**/*.{ts,js}": [
      "npm run lint --prefix backend",
      "npm test --prefix backend -- --findRelatedTests"
    ],
    "backend/**/*.json": [
      "npm run lint --prefix backend"
    ],
    "frontend/**/*.{ts,js,json,tsx,jsx}": [
      "npm run lint --prefix frontend"
    ]
  }
}